<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textSize="18.0dip"
        android:textColor="@color/black"
        android:id="@id/camera_test_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45.0dip"
        android:text="camera test"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" />
    <com.wobblemaster.lightlite.camera.AutoFitTextureView
        android:id="@id/texture_cit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@id/btn_takepicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:layout_marginBottom="16.0dip"
        android:text="@string/camera_capture"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/cit_button_blue" />
    <com.wobblemaster.lightlite.camera.CameraFocusView
        android:id="@id/camera_focus_view"
        android:visibility="gone"
        android:layout_width="70.0dip"
        android:layout_height="45.0dip" />
</RelativeLayout>