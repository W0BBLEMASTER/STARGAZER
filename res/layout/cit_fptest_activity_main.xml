<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/enrolProgressLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_gravity="right"
            android:id="@id/enrolCountTV"
            android:paddingTop="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:text="@string/enrolCount" />
        <ProgressBar
            android:id="@id/enrolProgressBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0"
            style="?android:progressBarStyleHorizontal" />
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_gravity="center"
            android:id="@id/enrolQualityTV"
            android:paddingTop="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enrolQuality" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enrolProgressLL">" <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/verifyImageView"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:src="@drawable/fpc_fingerprint_mask"
            android:layout_weight="1.0" />
        <TextView
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@id/verifyResultTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/lastTestResultLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@id/lastTestResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/checkLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50.0dip"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@id/enrolBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enrol"
            android:layout_weight="0.5" />
        <Button
            android:enabled="false"
            android:id="@id/verifyBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verify"
            android:layout_weight="0.5" />
    </LinearLayout>
</RelativeLayout>