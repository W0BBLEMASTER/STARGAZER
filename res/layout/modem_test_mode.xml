<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/modem_feature_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@id/layout_view_modem_test_status"
            android:background="#ff0ba683"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_alignParentBottom="true">
            <TextView
                android:textColor="#fffdfefe"
                android:gravity="center"
                android:id="@id/text_modem_feature_set"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cit_tool_not_support"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>