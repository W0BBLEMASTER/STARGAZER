<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/cb"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/toolbar_height"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@id/ct_back_rl"
        android:clickable="false"
        android:layout_width="wrap_content"
        style="@style/ToolbarIcon">
        <ImageView
            android:id="@id/ct_back_arrow_iv"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="@dimen/ic_toolbar_width"
            android:layout_height="@dimen/ic_toolbar_width"
            android:src="@mipmap/cit"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true" />
        <TextView
            android:textSize="@dimen/f2"
            android:textColor="@color/c1"
            android:id="@id/left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:text="@string/app_name"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/ct_title_ll"
        android:paddingLeft="@dimen/ic_toolbar_width"
        android:paddingRight="@dimen/ic_toolbar_width"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="@dimen/f2"
            android:textColor="@color/c1"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:id="@id/ct_title_tv"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:singleLine="true"
            android:includeFontPadding="false" />
        <TextView
            android:textSize="@dimen/f5a"
            android:textColor="@color/ccc1"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:id="@id/ct_subtitle_tv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:text="@string/app_name"
            android:singleLine="true"
            android:includeFontPadding="false" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/ct_option_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true">
        <RelativeLayout
            android:id="@id/ct_option_2_rl"
            android:visibility="gone"
            style="@style/ToolbarIcon">
            <ImageView
                android:id="@id/ct_option_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_toolbar_more"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@id/ct_option_1_rl"
            style="@style/ToolbarIcon">
            <ImageView
                android:id="@id/ct_option_iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_toolbar_more"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>