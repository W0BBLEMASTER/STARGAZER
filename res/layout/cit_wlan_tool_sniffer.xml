<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20.0sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cit_tool_wlan_sniffer_settings" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/list_item_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="30.0dip"
            android:layout_width="wrap_content"
            android:layout_height="200.0dip">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="60.0dip">
                <TextView
                    android:textAppearance="?android:textAppearanceLarge"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/cit_tool_wlan_tx_n_chan" />
                <EditText
                    android:textAppearance="?android:textAppearanceLarge"
                    android:gravity="center_vertical"
                    android:id="@id/sniffer_channel"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="1"
                    android:inputType="number" />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="60.0dip">
                <TextView
                    android:textAppearance="?android:textAppearanceLarge"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/cit_tool_wlan_tx_n_bandwidth" />
                <EditText
                    android:textAppearance="?android:textAppearanceLarge"
                    android:gravity="center_vertical"
                    android:id="@id/sniffer_bandwidth"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="20"
                    android:inputType="number" />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="60.0dip">
                <CheckBox
                    android:textAppearance="?android:textAppearanceLarge"
                    android:gravity="center_vertical"
                    android:id="@id/sniffer_is_circular"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/cit_tool_wlan_circular_capture" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="30.0dip"
            android:paddingRight="30.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:textAppearance="?android:textAppearanceMedium"
                android:gravity="center"
                android:layout_gravity="center|right"
                android:id="@id/sniffer_run_stop"
                android:layout_width="fill_parent"
                android:layout_height="60.0dip"
                android:text="@string/cit_tool_wlan_rx_run" />
            <Button
                android:textAppearance="?android:textAppearanceMedium"
                android:gravity="center"
                android:layout_gravity="center|right"
                android:id="@id/sniffer_run_clear"
                android:layout_width="fill_parent"
                android:layout_height="60.0dip"
                android:text="@string/cit_tool_wlan_clear" />
            <Button
                android:textAppearance="?android:textAppearanceMedium"
                android:gravity="center"
                android:layout_gravity="center|right"
                android:id="@id/sniffer_run_export"
                android:layout_width="fill_parent"
                android:layout_height="60.0dip"
                android:text="@string/cit_tool_wlan_export" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#ff828287"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20.0sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cit_tool_current_size" />
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@id/sniffer_size_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#ff828287"
            android:paddingTop="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />
        <Button
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="20.0sp"
            android:gravity="center"
            android:id="@id/sniffer_update_ap_list"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:text="@string/cit_tool_wlan_update_ap_list" />
        <View
            android:background="#ff828287"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/sniffer_scanResults"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>