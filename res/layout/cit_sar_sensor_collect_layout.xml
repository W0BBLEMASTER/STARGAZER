<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
        android:gravity="center"
        android:id="@id/btn_collect_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.0dip"
        android:text="@string/sar_sensor_collect_data"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:gravity="center"
        android:id="@id/btn_fake_cali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sar_sensor_collect_data_self_cali"
        android:layout_above="@id/btn_collect_data"
        android:layout_centerHorizontal="true" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10.0dip"
        android:layout_above="@id/btn_fake_cali">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:gravity="center"
                android:id="@id/tv_show_current_angle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:hint="@string/tips_show_current_angle" />
            <TextView
                android:gravity="center"
                android:id="@id/tv_show_current_sar_sensor_data"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:hint="@string/tips_show_current_sar_sensor_data" />
            <TextView
                android:textSize="30.0sp"
                android:gravity="center"
                android:id="@id/tv_calibrate_result"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20.0dip" />
            <TextView
                android:gravity="center"
                android:id="@id/tv_show_second_sar_sensor_current_data"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="30.0sp"
                android:gravity="center"
                android:id="@id/tv_show_second_sar_sensor_result"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:id="@id/tv_show_third_sar_sensor_current_data"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>