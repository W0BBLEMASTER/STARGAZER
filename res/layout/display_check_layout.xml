<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.wobblemaster.lightlite.view.CommonToolbar
        android:id="@id/comm_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="18.0dip"
        android:id="@id/display_summary_tv"
        android:background="@color/summ_bg"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comm_bar" />
    <View
        android:id="@id/line"
        android:background="@color/fingerprints_dark_gray_dis"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_below="@id/display_summary_tv" />
    <TextView
        android:id="@id/content_tv"
        android:background="@drawable/camer_thumbnail_bg"
        android:padding="5.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@style/cit_comm_content_text" />
    <ImageView
        android:id="@id/display_iv"
        android:background="@android:color/transparent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <com.wobblemaster.lightlite.view.PassFailButtonView
        android:id="@id/pass_fail_bv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>